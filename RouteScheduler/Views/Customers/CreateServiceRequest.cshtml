@model RouteScheduler.Models.ServiceRequested

@{
    ViewBag.Title = "CreateServiceRequest";
}

<div class="body-content bg-light">
    <br />
    <h2>Request a service</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

