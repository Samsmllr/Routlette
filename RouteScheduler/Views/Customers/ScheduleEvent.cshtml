
@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}


@model RouteScheduler.Models.ServiceRequested

@{
    ViewBag.Title = "Schedule Event";
}
<div class="body-content bg-light">
    <br />
    <h2>
        Schedule @Html.DisplayFor(model => model.BusinessTemplate.JobName)
    </h2>
        <h5>Price: $@Html.DisplayFor(model => model.BusinessTemplate.Price).00 || Length: @Html.DisplayFor(model => model.BusinessTemplate.ServiceLength)</h5>

        @Html.Raw(ViewBag.Details)

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.BusinessTemplate)
            @Html.HiddenFor(model => model.Customer)
            @Html.HiddenFor(model => model.CustomerId)
            @Html.HiddenFor(model => model.TemplateId)



            <div class="form-group">
                @Html.LabelFor(model => model.PreferredDayOne, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PreferredDayOne, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PreferredDayOne, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PreferredDayTwo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PreferredDayTwo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PreferredDayTwo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PreferredDayThree, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PreferredDayThree, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PreferredDayThree, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Choose a different Service", "ViewBusinessOwnerDetails", new { id = ViewData["businessOwner"] })
    </div>
</div>