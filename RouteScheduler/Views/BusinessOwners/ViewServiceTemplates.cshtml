@model IEnumerable<RouteScheduler.Models.BusinessTemplate>


@{
    ViewBag.Title = "ViewServiceTemplates";
}

<h2>View Service Templates</h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.JobName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceLength)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteServiceTemplate", new { id = item.TemplateId })
                </td>
            </tr>
        }

    </table>
