@{
    Layout = "~/Views/Shared/_LayoutBusinessOwner.cshtml";
}


@model RouteScheduler.Models.BusinessTemplate

@{
    ViewBag.Title = "Details";
}
<div class="body-content bg-light">
    <br />
    <div class-="container">
        <div class="row">
            <div class=" col-6">
            <h2>@Html.DisplayFor(model => model.JobName)</h2>
                </div>
<div class=" col-6">
            <div align="right">
                @Html.ActionLink("Edit", "Edit", new { id = Model.TemplateId }) |
                @Html.ActionLink("Back to List", "Index")
            </div>
            </div> 
         </div>
        </div>

            <hr />
            <br />
            <div class-="container">
                <div class="row">
                    <div class=" col-1"></div>
                    <div class="col-4">
                        <div>

                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Price)
                                </dt>

                                <dd>
                                    $@Html.DisplayFor(model => model.Price).00
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.ServiceLength)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ServiceLength)
                                </dd>



                            </dl>
                        </div>

                    </div>
                    <div class="col-6">
                        <dt>
                            @Html.DisplayNameFor(model => model.JobDetails)
                        </dt>

                        <dd>
                            @Html.Raw(@ViewBag.Details)
                        </dd>
                    </div>
                </div>

            </div>
        </div>
